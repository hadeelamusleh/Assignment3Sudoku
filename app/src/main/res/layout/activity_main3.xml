<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ham.myapplication.Main3Activity"
    >

    <TextView
        android:layout_width="150dp"
        android:layout_height="240dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="UserName                 Time\n\n Hadeel Musleh        00:07:54\n\n Amoon salameh      00:09:00\n\n Radi Jarar                 00:11:45\n\n Tasneem                   00:14:54\n\n hana                           00:22:21 "
        android:id="@+id/data"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="18dp"
        android:layout_marginTop="40dp"
        android:paddingLeft="5dp"
        android:textColor="#3a66b5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Top Five"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/data"
        android:layout_alignStart="@+id/data"
        android:layout_alignRight="@+id/data"
        android:layout_alignEnd="@+id/data"
        android:textStyle="bold|italic"
        android:textSize="30dp"
        android:paddingLeft="5dp"
        android:textColor="#0e2dba" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:id="@+id/back"
        android:textColor="#d6d91b"
        android:background="#2d3da4"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/data"
        android:layout_alignEnd="@+id/data" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView3"
        android:layout_below="@+id/data"
        android:layout_toLeftOf="@+id/back"
        android:layout_alignBottom="@+id/back"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/top5" />
</RelativeLayout>
